{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "globals": {
    chrome: true
  },
  "rules": {
    "comma-dangle": 0,
    "curly": [2, "all"],
    "eqeqeq": [2, "smart"],
    "indent": [2, 2],
    "keyword-spacing": 2,
    "linebreak-style": [2, "unix"],
    "new-cap": 2,
    "no-cond-assign": 0,
    "no-spaced-func": 2,
    "no-use-before-define": 2,
    "no-useless-concat": "error",
    "one-var": [2, "never"],
    "prefer-template": "error",
    "quotes": ["error", "single"],
    "semi": [2, "always"],
    "space-before-blocks": 2,
    "space-before-function-paren": [2, "never"],
    "space-infix-ops": 2,
    "space-unary-ops": 2
  }
}
